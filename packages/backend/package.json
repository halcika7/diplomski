{
  "name": "@job/backend",
  "version": "1.0.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "license": "MIT",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "start": "yarn build && yarn serve",
    "serve": "node dist/server.js",
    "serve:dev": "nodemon dist/server.js",
    "watch": "yarn dirs && concurrently \"yarn build:js --watch\" \"yarn serve:dev\"",
    "dirs": "rimraf dist && mkdirp dist && yarn copy-static-assets",
    "build": "yarn build:types && yarn build:js && yarn copy-static-assets",
    "build:types": "tsc -p tsconfig.prod.json --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "test": "NODE_ENV=test jest",
    "test:coverage": "yarn test --coverage --detectOpenHandles",
    "copy-static-assets": "ts-node copyStatic.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "^0.0.14",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/express-session": "^1.17.0",
    "@types/fs-extra": "^9.0.2",
    "@types/helmet": "^0.0.47",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^25.2.3",
    "@types/js-string-escape": "^1.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/multer": "^1.4.3",
    "@types/passport": "^1.0.4",
    "@types/passport-google-oauth20": "^2.0.4",
    "@types/pdfjs-dist": "^2.1.5",
    "@types/pug": "^2.0.4",
    "@types/rate-limit-redis": "^1.7.1",
    "@types/redis": "^2.8.21",
    "@types/shelljs": "^0.8.8",
    "@types/socket.io": "^2.1.6",
    "@types/web-push": "^3.3.0",
    "@types/yauzl": "^2.9.1",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "babel-plugin-root-import": "^6.5.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "concurrently": "^5.2.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "shelljs": "0.8.4",
    "ts-node": "8.10.1"
  },
  "repository": {
    "url": "https://github.com/halcika7/JobWeb"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.3.0",
    "@job/common": "1.0.0",
    "@sendgrid/mail": "^7.1.1",
    "axios": "^0.19.2",
    "cloudinary": "^1.21.0",
    "compression": "^1.7.4",
    "connect-redis": "^4.0.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "express-session": "^1.17.1",
    "fast-xml-parser": "^3.17.4",
    "fs-extra": "^9.0.1",
    "helmet": "^3.22.0",
    "hpp": "^0.2.3",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "js-string-escape": "^1.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.6",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "pdfjs-dist": "^2.5.207",
    "pug": "^2.0.4",
    "rate-limit-redis": "^2.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "socket-controllers": "^0.0.5",
    "socket.io": "^2.3.0",
    "web-push": "^3.4.4",
    "winston": "^3.2.1",
    "yauzl": "^2.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/configs/db-connect.ts",
      "!src/app.ts",
      "!src/server.ts"
    ]
  }
}
