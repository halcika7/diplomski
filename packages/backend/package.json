{
  "name": "@job/backend",
  "version": "1.0.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "license": "MIT",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "start": "yarn serve",
    "serve": "node dist/server.js",
    "serve:dev": "nodemon dist/server.js",
    "watch": "yarn dirs && concurrently \"yarn build:js --watch\" \"yarn serve:dev\"",
    "dirs": "rimraf dist && mkdirp dist && yarn copy-static-assets",
    "build": "yarn build:types && yarn build:js && yarn copy-static-assets",
    "build:types": "tsc -p tsconfig.prod.json --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "test": "NODE_ENV=test jest --runInBand",
    "test:migrate": "NODE_ENV=test yarn migrate && jest --runInBand",
    "test:coverage": "yarn test --coverage --detectOpenHandles",
    "test:coverage:migrate": "yarn test:migrate --coverage --detectOpenHandles",
    "copy-static-assets": "ts-node copyStatic.ts",
    "lint:ts:fix": "eslint . --ext .ts --fix",
    "format:write": "prettier --write . --ignore-path ../../.prettierignore",
    "migrate": "yarn build:js && node dist/migrations/index.js"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "^0.0.16",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/csurf": "^1.11.0",
    "@types/express": "^4.17.11",
    "@types/express-rate-limit": "^5.1.1",
    "@types/express-session": "^1.17.3",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/multer": "^1.4.5",
    "@types/passport": "^1.0.6",
    "@types/passport-google-oauth20": "^2.0.6",
    "@types/pdfjs-dist": "^2.1.7",
    "@types/pug": "^2.0.4",
    "@types/redis": "^2.8.28",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "@types/yauzl": "^2.9.1",
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "shelljs": "0.8.4",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "9.1.1"
  },
  "dependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@google-cloud/storage": "^5.7.4",
    "@job/common": "1.0.0",
    "@sendgrid/mail": "^7.4.2",
    "axios": "^0.21.1",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "babel-plugin-root-import": "^6.6.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.1",
    "cloudinary": "^1.24.0",
    "compression": "^1.7.4",
    "connect-redis": "^5.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "fast-xml-parser": "^3.18.0",
    "helmet": "^4.4.1",
    "hpp": "^0.2.3",
    "inversify": "^5.0.5",
    "inversify-express-utils": "^6.3.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.15",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "pdfjs-dist": "^2.6.347",
    "pug": "^3.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3",
    "yauzl": "^2.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/migrations/**",
      "!src/services/Document.ts",
      "!src/services/Passport.ts",
      "!src/services/Email.ts",
      "!src/services/Redis.ts",
      "!src/services/Upload.ts",
      "!src/services/User.ts",
      "!src/services/File.ts",
      "!src/services/Order.ts",
      "!src/configs/**",
      "!src/models/**",
      "!src/public/**",
      "!src/utils/**",
      "!src/inversify/**",
      "!src/app.ts",
      "!src/backend.types.ts",
      "!src/server.ts"
    ]
  }
}
